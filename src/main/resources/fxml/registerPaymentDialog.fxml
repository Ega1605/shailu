<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.shailu.deposito_dental_pos.controller.RegisterPaymentDialogController"
          hgap="10" vgap="10"
          style="-fx-padding: 20">

    <Label text="Monto:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtAmount" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Tipo de pago:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cbPaymentType" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <padding>
            <Insets top="10" />
        </padding>
        <children>
            <Button fx:id="btnCancel" text="Cancelar" onAction="#onCancel"
                    style="-fx-background-color: #e0e0e0;" />
            <Button fx:id="btnRegister" text="Registrar Pago" onAction="#onRegister"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
        </children>
    </HBox>

</GridPane>
