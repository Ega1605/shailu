<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Pagination?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.shailu.deposito_dental_pos.controller.InventoryController"
            prefWidth="1200"
            prefHeight="800">
    <top>
        <fx:include source="menuBar.fxml"/>
    </top>
    <!-- ================= LEFT PANEL ================= -->
    <left>
        <VBox prefWidth="300" spacing="10" style="-fx-padding:15; -fx-background-color:#f5f5f5;">

            <Label style="-fx-font-size:18px; -fx-font-weight:bold;" text="Producto" />

            <Label text="Código" />
            <TextField fx:id="txtCode" promptText="Escribe el código" />

            <Label text="Código de barras" />
            <TextField fx:id="txtBarCode" promptText="Escanea código" />

            <Label text="Nombre" />
            <TextField fx:id="txtName" />

            <Label text="Descripción" />
            <TextField fx:id="txtDescription" prefHeight="60" />

            <Label text="Precio de compra" />
            <TextField fx:id="txtPurchasePrice" />

            <Label text="Ganancia" />
            <TextField fx:id="txtProfit" />

            <Label text="Cantidad" />
            <TextField fx:id="txtQuantity" />

            <Button fx:id="btnAdd" maxWidth="Infinity" prefHeight="45" styleClass="mi-boton" stylesheets="@styles.css" text="Procesar" />
        </VBox>
    </left>

    <!-- ================= CENTER TABLE ================= -->
    <center>
        <VBox spacing="10" style="-fx-padding:15;">
            <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="Inventario" />
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Busqueda" />
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <TextField fx:id="txtSearch" alignment="TOP_LEFT" maxWidth="-Infinity" prefWidth="400.0" promptText="Nombre del producto" />
               <Button fx:id="btnDelete" mnemonicParsing="false" prefHeight="31.0" prefWidth="166.0" styleClass="btn-eliminar"
                       stylesheets="@styles.css" text="Eliminar" textFill="WHITE"
                       onAction="#deleteSelectedProduct">
                  <HBox.margin>
                     <Insets left="300.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>

            <TableView fx:id="tableProducts">
                <columns>

                    <TableColumn fx:id="colCode" prefWidth="120" text="Código" />

                    <TableColumn fx:id="colName" prefWidth="200" text="Nombre" />

                    <TableColumn fx:id="colPrice" prefWidth="100" text="Precio" />

                    <TableColumn fx:id="colStock" prefWidth="80" text="Stock" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
            <Pagination fx:id="pagination" maxPageIndicatorCount="5" />
        </VBox>
    </center>

</BorderPane>
