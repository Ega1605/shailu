<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.shailu.deposito_dental_pos.controller.MainController"
            prefWidth="1024"
            prefHeight="768">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox spacing="20"
              style="-fx-background-color:#2c7be5; -fx-padding:15;"
              alignment="CENTER_LEFT">

            <Label fx:id="lblUsuario"
                   text="Usuario: Admin"
                   style="-fx-text-fill:white; -fx-font-size:16px;" />

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <GridPane hgap="40"
                  vgap="40"
                  alignment="CENTER"
                  style="-fx-padding:40;">

            <!-- Fila 1 -->
            <Button text="Inventario"
                    onAction="#openInventario"
                    prefWidth="200"
                    prefHeight="200"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                    style="-fx-font-size:18px;" />

            <Button text="Ventas"
                    prefWidth="200"
                    prefHeight="200"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1"
                    style="-fx-font-size:18px;" />

            <Button text="Clientes"
                    prefWidth="200"
                    prefHeight="200"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2"
                    style="-fx-font-size:18px;" />

            <!-- Fila 2 -->
            <Button text="Reportes"
                    prefWidth="200"
                    prefHeight="200"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="0"
                    GridPane.columnSpan="2"
                    style="-fx-font-size:18px;" />

            <Button text="FacturaciÃ³n"
                    prefWidth="200"
                    prefHeight="200"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="2"
                    style="-fx-font-size:18px;" />

        </GridPane>
    </center>

</BorderPane>